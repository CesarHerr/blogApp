<section class="flex-col items-center w-full">
  <h2 class="text-4xl text-center">Log in</h2>
  <br>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-center pb-8">        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full py-2 px-4 rounded", placeholder: "Email" %>
      </div>

      <div class="field text-center pb-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full py-2 px-4 rounded", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-left pb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "Log in", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</section>