<main>
  <header>
    <h1><%= @user.name%></h1>
    <p>Number of posts: <%= @user.posts_counter%></p>
    <hr />
  </header>
  <section>
    <h3>Bio</h3>
    <p><%= @user.bio%></p>
  </section>
  <section>    
    <hr />
    <% if flash[:notice].present? %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <ul>
      <% @post.each do |post| %>
      <li>
        <%= link_to user_post_path(user_id: post.author_id, id: post.id) do%>
          <h3>Post #<%= post.id %></h3>
        <% end %> 
        <p><%= post.text%></p>
        <hr />
      </li>
      <% end %>
    </ul>  
    <%= link_to user_posts_path(@user) do%>
    <button type="button">Post by Users</button>
  <% end %>   
  </section>
  <br>
  <%= render 'layouts/root'%>
</main>
